<h2><%= @industry.name %></h2>

<%= link_to "Back", agent_path(session[:agent_id]) %><br>

<h4> Leads in the Industry </h4>
<div>
  <h4>Filter leads:</h4>
  <%= form_tag("/agents/#{session[:agent_id]}/industries/#{@industry.id}", method: "get") do %>
    <%= select_tag(:status ,options_for_select([['Go','Go'],['No Go','No Go'],['Converted','Converted']]),include_blank: true) %>
    <%= submit_tag "Filter" %>
  <% end %>
</div>

<br>
<table>
  <tr>
    <th>ID no</th>
    <th>Lead Name</th>
    <th>Status</th>
    <th>Booked Amount</th>
  </tr>
  <% @leads.each do |lead| %>
  <tr>
      <td><%= lead.id %></td>
      <td><%= lead.name %></td>
      <td><%= lead.status %></td>
      <td><%= lead.booked_loans %></td>
  </tr>
  <% end %>
</table>
