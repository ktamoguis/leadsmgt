<div class = "container">
  <div class ="row">
    <div class="col-md-12">
      <h2>Hi! <%= @agent.name %></h2>
  </div>

<div class="col-md-12">
  <h3>Your Region: <%= link_to @agent.region.name, region_path(@agent.region) %></h3>
</div>

<div class="col-md-12">
  <p><%= link_to "Create Lead", new_lead_path %></p><p><%=   link_to "Your Leads", leads_path %></p>
  <% if @agent.manager %>
  <p><%= link_to "Regions Summary", regions_path %></p>
  <p> <%=link_to "Your Agents", agents_path %></p>
  <p>  <%=link_to "Industries Summary", industries_path %></p>
  <% end %>
</div>

<div class="col-md-12">
  <table class="table">
    <tr>
      <th>Total Leads</th>
      <th>Total Go</th>
      <th>Total No Go</th>
      <th>Total Converted</th>
      <th>Total Booked Loans</th>
    </tr>
    <tr>
      <td><%= @total_leads %></td>
      <td><%= @total_go %></td>
      <td><%= @total_nogo %></td>
      <td><%= @total_converted %></td>
      <td><%= @total_booked %></td>
    </tr>
  </table>
</div>

<div class="col-md-12">
  <p><%= form_tag edit_agent_path(@agent), method: "get" do %>
      <%= submit_tag("Edit Agent") %>
    <% end %>
  </p>

  <p><%= form_tag signout_path do %>
    <input type=submit value='Sign Out'>
  <% end %>
  </p>

</div>
</div>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>
