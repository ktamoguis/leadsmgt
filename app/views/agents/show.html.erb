<h1><%= @agent.name %></h1>
<h2><%= @agent.region.name %></h2>

<% if @agent.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@agent.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>

    <ul>
    <% @agent.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    <p> Please correct the concerned fields. </p>
  </div>
<% end %>

<p><%= form_tag signout_path do %>
  <input type=submit value='Sign Out'>
<% end %>
</p>

<p><%= link_to "Create Lead", new_lead_path %></p>

<table>
  <tr>
    <th>ID no</th>
    <th>Industry</th>
    <th>Lead Name</th>
    <th>Status</th>
    <th>Booked Amount</th>
  </tr>
  <% @agent.leads.each do |lead| %>
  <tr>
      <td><%= lead.id %></td>
      <td><%= lead.industry.name %></td>
      <td><%= link_to lead.name, edit_lead_path(lead) %></td>
      <td><%= lead.status %></td>
      <td><%= lead.booked_loans %></td>
  </tr>
  <% end %>
</table>
