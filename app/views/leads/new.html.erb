<h2>Create a Lead</h2>

<%= form_for @lead do |f| %>
  <label>Name:</label>
  <%= f.text_field :name %><br>
  <label>Industry: </label><br>
  <label>Status: </label>
  <%= f.select(:status ,options_for_select([['Go','Go'],['No Go','No Go'],['Converted','Converted']],'GO')) %>

  <%= f.submit %>

<% end %>
