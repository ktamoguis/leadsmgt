<div class = "container">
  <h2> Leads Index </h2>

  <%= link_to "Back to Profile", agent_path(@agent) %>

  <div>
    <h4>Filter leads:</h4>
    <%= form_tag("/agents/#{@agent.id}/leads", method: "get") do %>
      <%= select_tag(:status ,options_for_select([['Go','Go'],['No Go','No Go'],['Converted','Converted']]),include_blank: true) %>
      <%= submit_tag "Filter" %>
    <% end %>
  </div>

  <br>
  <table class="table">
    <tr>
      <th>ID no</th>
      <th>Industry</th>
      <th>Lead Name</th>
      <th>Status</th>
      <th>Booked Amount</th>
    </tr>
    <% @leads.each do |lead| %>
    <tr>
        <td><%= lead.id %></td>
        <td><%= link_to lead.industry.name, industry_path(lead.industry) %></td>
        <td><%= link_to lead.name, lead_path(lead) %></td>
        <td><%= lead.status %></td>
        <td><%= lead.booked_loans %></td>
    </tr>
    <% end %>
  </table>
</div>
